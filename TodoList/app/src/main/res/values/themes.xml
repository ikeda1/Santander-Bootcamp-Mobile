<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToDoList" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/purple</item>
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Cor da status bar -->
        <item name="colorPrimaryDark">@color/black</item>
        <!-- Cor dos botoes -->
        <item name="colorSecondary">@color/purple</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>

    </style>

    <style name="PopupMenu" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:popupBackground">@drawable/popup_menu_bg</item>
        <item name="android:popupElevation">10dp</item>
    </style>


    <style name="TextInputLayout.roundedCorner" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="hintTextColor">@color/gray_ish</item>
        <item name="android:textColorHint">@color/gray_ish</item>
        <item name="boxStrokeColor">@color/white</item>
    </style>

    <style name="roundedCorner">
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
    </style>

    <style name="EditTextThemeOverlay" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@android:color/white</item>
    </style>
</resources>