<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.example.todolist.ui.fragments.ListFragment"
        android:label="Lista de Tarefas"
        tools:layout="@layout/fragment_list">
        <action
            android:id="@+id/listFragment_to_addFragment"
            app:destination="@id/addFragment" />
        <action
            android:id="@+id/listFragment_to_updateFragment"
            app:destination="@id/updateFragment" />
    </fragment>
    <fragment
        android:id="@+id/addFragment"
        android:name="com.example.todolist.ui.fragments.AddFragment"
        android:label="Adicionar Tarefa"
        tools:layout="@layout/fragment_add" >
        <action
            android:id="@+id/addFragment_to_listFragment"
            app:destination="@id/listFragment" />
    </fragment>
    <fragment
        android:id="@+id/updateFragment"
        android:name="com.example.todolist.ui.fragments.UpdateFragment"
        android:label="Atualizar Tarefa"
        tools:layout="@layout/fragment_update">
        <action
            android:id="@+id/updateFragment_to_listfragment"
            app:destination="@id/listFragment" />
        <argument
            android:name="currentTask"
            app:argType="com.example.todolist.room.Task" />
    </fragment>

</navigation>